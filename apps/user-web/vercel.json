{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "corepack enable && pnpm install --no-frozen-lockfile",
  "crons": [
    {
      "path": "/api/cron/check-schedules",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/process-scheduled-sms",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/process-scheduled-emails",
      "schedule": "* * * * *"
    }
  ]
}
