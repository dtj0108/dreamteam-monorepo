{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "npx pnpm@9.15.4 install --no-frozen-lockfile",
  "crons": [
    {
      "path": "/api/cron/check-schedules",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/process-scheduled-sms",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/process-scheduled-emails",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/process-scheduled-calls",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/auto-replenish",
      "schedule": "*/5 * * * *"
    }
  ]
}
